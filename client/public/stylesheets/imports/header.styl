#header
  background-color white
  box-shadow 0 1px 1px rgba(0, 0, 0, 0.5)
  width 100%
  position fixed
  top 0
  left 0
  padding 10px
  box-sizing border-box
  z-index 10
  i
    font-size 1.25em
  strong
    font-size 1.3em
    color main
    text-shadow 0 1px 1px rgba(0, 0, 0, 1)
  ul
    color main
    position absolute
    top -5px
    right 10px
    li
      display inline
      margin 0
      padding 0 10px
      user-select none
#registerBox, #loginBox
  border-radius 5px
  z-index 100
  background white
  box-shadow 0 1px 1px opa5
  margin 0 auto
  position fixed
  top 50px
  right 10px
  margin-left -200px
  button
    width 290px
    height 50px
    border-radius 2px
    margin 0 5px
  .inputText
    margin 1px
    width 270px
    box-shadow inset 0 0 0 1px rgba(0,0,0,0.1)
    background gray
    transition 0.2s
    &:focus
      outline none
      box-shadow inset 0 0 0 2px main
  .inputCheckBox
    border-radius 0
    &:focus
      box-shadow 0 0 0 0
  .changeRegister, .changeLogin
    color main
    &:hover
      cursor pointer
      color black

@media (max-width 700px)

  #registerBox, #loginBox
    box-sizing border-box
    width 90%
    margin 0 auto
    padding 0
    left 0
    right 0
