#header
  background-color white
  box-shadow 0 1px 1px rgba(0, 0, 0, 0.5)
  width 100%
  position fixed
  top 0
  left 0
  padding 10px
  box-sizing border-box
  z-index 10

  strong
    font-size 1.2em
    color main
    padding 0
    margin 0
    text-shadow 0 1px 1px rgba(0, 0, 0, 1)

  ul
    color main
    position absolute
    top -5px
    right 10px
    li
      display inline
      margin 0
      padding 0 10px
      user-select none
      &:hover
        cursor pointer

#registerBox, #loginBox
  border-radius 5px
  z-index 100
  background white
  box-shadow 0 1px 1px opa5
  margin 0 auto
  position fixed
  top 50px
  right 10px
  margin-left -200px
  button
    width 290px
    height 50px
    border-radius 2px
    margin 15px 5px 5px 5px
  input
    margin 1px
    width 270px
    box-shadow inset 0 0 0 1px rgba(0,0,0,0.1)
    background gray
    transition 0s
    &:focus
      outline none
      box-shadow inset 0 0 0 2px main
