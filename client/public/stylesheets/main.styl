@import "imports/variables.styl"
@import "imports/defaults.styl"
@import "imports/header.styl"
@import "imports/footer.styl"
@import "imports/services.styl"
@import "imports/landing.styl"
@import "imports/user.styl"
@import "imports/ribbon.styl"

html, body
  color black
  background-color backgroundColor
  font fontSize fontFamily
  margin 0
  padding 0
  height 100%

ul
  list-style none
  padding 0
  
a
  text-decoration none
  color main
  &:hover
    color black

button
  background-color black
  color white
  border 0
  padding 10px
  margin-left 5px
  transition background 0.1s ease-in
  &:focus
    outline none
  &:hover
    background-color black
    color white
    cursor pointer
  
#container
  min-height 100%
  position relative
  
input
  background white
  padding 10px
  border 0
  transition 0.2s
  &:focus
    outline none
    box-shadow inset 0 0 0 2px main
select
  padding 5px
  border 0
  box-shadow 0 1px 1px opa5
  
#content
  margin 100px auto 0 auto
  max-width 700px
  padding-bottom 220px

#order
  float right
  margin-top -35px
  span
    padding 0 10px

.clearInput
  padding-left 10px
  &:hover
    cursor pointer

table
  th
    background main
    color white
    padding 10px
  td
    padding 10px
    border 1px solid black
  
@media (max-width 700px)
  
  #content
    margin 100px 20px 0 20px  
