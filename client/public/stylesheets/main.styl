@import "imports/variables.styl"
@import "imports/header.styl"
@import "imports/footer.styl"
@import "imports/defaults.styl"

body
  color black
  background-color backgroundColor
  font fontSize fontFamily
  margin 0
  padding 0

a
  text-decoration none
  color blue
  &:hover
    color black

button
  background-color black
  color white
  border 0
  padding 10px
  &:focus
    outline none

input
  padding 10px
  border 0
  transition 0.2s
  &:focus
    outline none
    box-shadow inset 0 0 0 2px blue

#content
  margin 50px auto
  padding paddingDefault
  max-width 700px

.contentBox
  background-color white
  box-shadow 0 1px 1px rgba(0, 0, 0, 0.5);
  margin-top 20px
  padding paddingDefault
  transition 0.3s
  &:hover
    background-color black
    color white

.centered
  text-align center
