@import "imports/variables.styl"
@import "imports/defaults.styl"
@import "imports/header.styl"
@import "imports/footer.styl"
@import "imports/services.styl"
  
body
  color black
  background-color backgroundColor
  font fontSize fontFamily
  margin 0
  padding 0

a
  text-decoration none
  color main
  &:hover
    color black

button
  background-color black
  color white
  border 0
  padding 10px
  margin-left 5px
  &:focus
    outline none
  &:hover
    background-color black
    color white
    cursor pointer
  
input
  background white
  padding 10px
  border 0
  transition 0.2s
  &:focus
    outline none
    box-shadow inset 0 0 0 2px main
select
  padding 5px
  border 0
  box-shadow 0 1px 1px opa5
  
#content
  margin 50px auto
  padding paddingDefault
  max-width 700px

#order
  float right
  margin-top -35px
  span
    padding 0 10px

.clearInput
  padding-left 10px
  &:hover
    cursor pointer
